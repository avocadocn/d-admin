

themeColor = rgb(50, 175, 224)
navbarLinearColor = rgb(51, 176, 227)
navbarFontColor = #fff
footerFontColor = #999

titleColor = #5c6174
fontColor = #666
backgroundColor = #f9f9f9
linkColor = #28689b

inputBlackgroundColor = rgb(250, 250, 250)
inputPlaceholderColor = rgb(177, 177, 177)

html, body
  height 100%

html
  font-size 62.5%

body
  font-size 14px
  line-height 1
  color fontColor

.dl_sm_group, .dl_lg_group
  .control-label
    padding-top 0 !important
    padding-right 0
    font-weight normal
  .dl_checkbox, .dl_radio
    input
      height 14px
      margin-right 3px
    font-weight normal
    color rgb(179, 178, 175)

.dl_sm_group
  margin-bottom 5px
  .control-label
    line-height 30px
    font-size 15px
  button, select,
  input[type="text"],
  input[type="password"],
  input[type="number"],
  input[type="email"]
    height 30px

.dl_lg_group
  .control-label
    line-height 35px
    font-size 17px
  button, select,
  input[type="text"],
  input[type="password"],
  input[type="number"],
  input[type="email"]
    height 35px

input[type="number"]
  padding-right 0

.dl_form_control, .dl_full_control
  display inline-block
  background-color inputBlackgroundColor

.dl_form_control
  width auto

.dl_full_control
  width 100%

.dl_btn
  line-height 1
  background-color themeColor
  border none

