.group_head
	margin-top 50px
	margin-bottom 50px
.group
	height 200px
	border 10px
	border-color black
	background-color yellow
	input
		display none
	label
		width 100%
	span
		position absolute
		right 0
		bottom 0
.group.active
	span
		background-color red
.group.inactive
	span
		background-color green
		position absolute
		right 0
		bottom 0
