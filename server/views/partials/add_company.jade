.modal-dialog
  .dl-modal
    .dl-modal-header
      button(type="button" class="close" data-dismiss="modal" aria-hidden="true") X
      h4.modal-title#myModalLabel 新建学校
    .dl-modal-body
      form.form-horizontal.clearfix(name="infoForm")
        .form-group
          h4.pull-left 基本信息
        hr
        .form-group
          label.col-sm-2.control-label 学校名:
          .col-sm-10
            input.form-control(ng-model="newCompany.name")
        .form-group#cities(data-src="/region/json" data-select="province city district")
          label.col-sm-2.control-label(for="province") *城市:
          .col-sm-3
            input.form-control(ng-model="newCompany.province")
          .col-sm-3
              input.form-control(ng-model="newCompany.city")
          .col-sm-3(last_child)
            input.form-control(ng-model="newCompany.district")
        .form-group
          label.col-sm-2.control-label 详细地址:
          .col-sm-10
            input.form-control(ng-model="newCompany.address")
        .form-group
          label.col-sm-2.control-label 简介:
          .col-sm-10
            input.form-control(ng-model="newCompany.brief")
        .cropper#image_cropper
          .cropit-image-preview-container(ng-show="isUploading")
            .cropit-image-preview
          .operator_slider(ng-show="isUploading")
            span.glyphicon.glyphicon-picture.icon_small
            input.cropit-image-zoom-input(type="range")
            span.glyphicon.glyphicon-picture.icon_large
          .operator_button.text-center
            .btn-group
              button.btn.btn-default(ng-click="selectLogo()") 选择图片
          input.cropit-image-input#cropit_image_input(type="file")
    .dl-modal-footer
      button.dl_btn.dl_btn_large(ng-click="createCompany()") 确定
