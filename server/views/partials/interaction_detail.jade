.modal-dialog
  .dl-modal
    .dl-modal-header
      button(type="button" class="close" data-dismiss="modal" aria-hidden="true") X
      h4.modal-title 模板详细信息
    .dl-modal-body
      .row
        .col-xs-2
          span 互动类型:
        .col-xs-6
          span {{interactionType | templateFilter}}
      .row
        .col-xs-2
          span 主题:
        .col-xs-6
          span {{interactionDetail.theme}}
      .row
        .col-xs-2
          span 内容:
        .col-xs-10
          .more_content(ng-bind-html="interactionDetail.content | unsafe")
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 开始时间:
        .col-xs-6
          span {{interactionDetail.activity.startTime | date:'yyyy-MM-dd HH:mm'}}
      .row
        .col-xs-2
          span 结束时间:
        .col-xs-6
          span {{templateDetail.endTime | date:'yyyy-MM-dd HH:mm'}}
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 截止时间:
        .col-xs-6
          span {{interactionDetail.activity.deadline | date:'yyyy-MM-dd HH:mm'}}
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 活动类型:
        .col-xs-6
          span {{interactionDetail.activity.activityMold}}
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 最大人数:
        .col-xs-6
          span {{interactionDetail.activity.memberMax}}
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 最小人数:
        .col-xs-6
          span {{templateDetail.activity.memberMin}}
      .row(ng-if="interactionType==1")
        .col-xs-2
          span 地点:
        .col-xs-6
          span {{interactionDetail.activity.location.name}}
      .row(ng-if="interactionType==2")
        .col-xs-2
          span 选项:
        .col-xs-6
          span.option_span(ng-repeat="_option in interactionDetail.poll.option") {{_option.value}}
      .row
        .col-xs-2
          span 标签:
        .col-xs-6
          span.option_span(ng-repeat="tag in interactionDetail.tags") {{tag}}
      .row
        .col-xs-2
          span 图片:
        .col-xs-10
          .row
            img.col-xs-3(ng-repeat="photo in interactionDetail.photos" ng-src="{{staticUrl+photo.uri}}/100/100")
    .dl-modal-footer
      button.btn.btn-info(data-dismiss="modal") 确定