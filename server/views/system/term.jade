#content
  .outer
    .inner
      .dl_row
        h4 添加一期抢场地活动
        form.form-inline(name="addForm")
          .form-group
            label 描述
            input.form-control(type="text" ng-model="addFormModel.content")
          .form-group
            label 开始时间
            input.form-control(type="text" ng-model="addFormModel.start_time")
          .form-group
            label 结束时间
            input.form-control(type="text" ng-model="addFormModel.end_time")
          button.btn.btn-default(type="submit" ng-click="addTerm()") 添加
        hr
      .dl_row.dl_code.table_all
        table(datatable="ng")#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
          thead
            tr
              th 描述
              th 开始时间
              th 结束时间
              th 创建时间
              th 状态
              th 操作
          tbody
            tr(ng-repeat="term in terms")
              td {{term.content}}
              td {{term.start_time | date:'yyyy-MM-dd HH:mm:ss'}}
              td {{term.end_time | date:'yyyy-MM-dd HH:mm:ss'}}
              td {{term.create_time | date:'yyyy-MM-dd HH:mm:ss'}}
              td {{term.status}}
              td
                a 编辑
                span &nbsp;|&nbsp;
                a(ng-click="deleteTerm(term)") 删除