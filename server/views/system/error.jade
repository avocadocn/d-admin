#content
  .outer
    .inner
      <!--Begin Datatables-->
      .row
        .col-lg-12
          .box
            header
              .icons
                i.fa.fa-table
              h5 错误日志
            #collapse4.body
              table#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
                thead
                  tr
                    th 目标
                    th 名称
                    th 目标邮箱
                    th 错误类型
                    th 错误值
                    th 日期
                    th 操作
                tbody
                  tr(ng-repeat="error in errors")
                    td {{error.error.target.kind}}
                    td {{error.error.target.name}}
                    td {{error.error.target.email}}
                    td {{error.error.kind}}
                    td {{error.error.body}}
                    td {{error.date | date:'yyyy-MM-dd HH:mm' | dateView}}
                    td
                      a(ng-click="delete(error_id)") 删除