#content
  .outer
    .inner
      .row
        .col-lg-12
          .box
            header
              .icons
                i.fa.fa-table
              h5 推送日志
            #collapse4.body.table_all
              table(datatable="ng")#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
                thead
                  tr
                    th 日期
                    th 活动id
                    th 推送内容
                    th 用户id
                    th 状态
                    th 用户设备信息
                tbody
                  tr(ng-repeat="log in pushLogs")
                    td {{log.push_time | date:'yyyy-MM-dd HH:mm' | dateView}}
                    td {{log.campaign}}
                    td
                      p
                        span.text-primary title
                        | :&nbsp;{{log.push_title}}
                      p
                        span.text-primary msg
                        | :&nbsp;{{log.push_msg}}
                    td {{log.user}}
                    td.text-center
                      p.text-success(ng-if="log.status === 'success'") 推送成功
                      p.text-danger(ng-if="log.status === 'fail'") 推送失败
                      p: button.btn.btn-default(ng-click="repush(log._id)" ng-if="log.status === 'fail'") 重新推送
                    td
                      p(ng-repeat="(key, value) in log.device")
                        span.text-primary {{key}}
                        | :&nbsp;{{value}}




