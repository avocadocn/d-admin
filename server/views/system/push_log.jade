#content
  .outer
    .inner
      .row
        .col-lg-12
          .box
            header
              .icons
                i.fa.fa-table
              h5 推送日志
            #collapse4.body.table_all
              table(datatable="ng")#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
                thead
                  tr
                    th 日期
                    th 活动id
                    th 推送内容
                    th 用户id
                    th 用户设备信息
                    th 操作
                tbody
                  tr(ng-repeat="log in pushLogs")
                    td {{log.push_time | date:'yyyy-MM-dd HH:mm' | dateView}}
                    td {{log.campaign}}
                    td {{log.push_msg}}
                    td {{log.user}}
                    td
                      p(ng-repeat="(key, value) in log.device")
                        span.text-primary {{key}}
                        | :&nbsp;
                        span {{value}}
                    td
                      button.btn.btn-default(ng-click="repush(log._id)" ng-if="log.status === 'fail'") 重新推送



