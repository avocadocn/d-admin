#content
  .outer
    .inner
      <!--Begin Datatables-->
      .row
        .col-lg-12
          .box
            header
              .icons
                i.fa.fa-table
              h5 抢购管理
              button.dl_btn.dl_btn_right.pull-right(data-toggle="modal" data-target="#addLootModal") 增加
            #collapse4.body.table_all
              table(datatable="ng")#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
                thead
                  tr
                    th 场馆名称
                    th 场地信息
                    th 抢购类型
                    th 抢购属期时间
                    th 抢购最少人数

                    th 活动开始时间
                    th 活动结束时间
                    th 抢购开始时间
                    th 抢购结束时间
                    th 抢购状态

                    th 抢购描述
                    th 操作
                tbody
                  tr(ng-repeat="loot in loots")
                    td {{loot.stadium.name}}
                    td {{loot.site}}
                    td {{loot.group_type}}
                    td {{loot.term.start_time}}
                    td {{loot.loot_number}}

                    td {{loot.campaign_start_time}}
                    td {{loot.campaign_end_time}}
                    td {{loot.loot_start_time}}
                    td {{loot.loot_end_time}}
                    td 
                      span(ng-if="loot.status==='active'") 正常
                      span(ng-if=)

                    td {{loot.content}}
                    td 
                      button.btn.btn-xs.btn-warning(ng-if="loot.status==='active'" ng-click="activate(stadium,'closed')") 关闭
                      button.btn.btn-xs.btn-success(ng-if="loot.status==='closed'" ng-click="activate(stadium,'active')") 启用
                      button.btn.btn-xs.btn-info(ng-if="loot.status==='active'||loot.active==='closed' " ng-click="edit(loot)") 编辑

.modal.fade#addLootModal(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
  include ../partials/addLootModal
.modal.fade#editLootModal(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
  include ../partials/editLootModal