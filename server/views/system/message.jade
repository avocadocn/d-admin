#content
  .outer
    .inner
      form.margin_top_5(name = "message_form" novalidate)
        .dl_row.margin_top_10
          .dl_left_head.dl_vertical
            发送站内信
          .dl_md_2.dl_vertical
            input.dl_modal_input.form-control(type="text" ng-model="content.text" placeholder="请控制在140字以内" maxlength=140 required)
          .dl_md_1.dl_vertical
            button.dl_btn.dl_btn_right(ng-click="send()" ng-disabled="message_form.$invalid") 发送

      .margin_top_20
        .dl_row.dl_code.table_all
          table(datatable)#dataTable.table.table-bordered.table-condensed.table-hover.table-striped
            thead
              tr
                th 序号
                th 内容
                th 日期
                th 操作
            tbody
              tr(ng-repeat="send_message in send_messages")
                td {{$index}}
                td {{send_message.content}}
                td {{send_message.post_date | date:'yyyy-MM-dd HH:mm' | dateView}}
                td 删除