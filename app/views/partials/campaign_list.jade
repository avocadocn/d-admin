mixin campaign_list(campaigns)

  h1 活动列表
  ul
    each campaign in campaigns
      li
        h3= '参加活动人数:' + campaign.member.length
        h2= campaign.content
        p= '创建时间' + campaign.create_time
        p= '开始时间' + campaign.start_time
        p= '结束时间' + campaign.end_time
        p= '是否已经参加该活动' + campaign.join ? '是' : '否'
