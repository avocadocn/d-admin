extends layouts/personal

block personal
  h1 基本信息
  form.form-horizontal(action="/users/dealEditInfo" method="post")
    .form-group
      label.col-xs-2.control-label 登录邮箱
      label.col-xs-10.control-label= user.email
    .form-group
      label.col-xs-2.control-label 昵称
      .col-xs-10
        input.form-control(type="text" name="nickname" value="#{user.nickname}")
    .form-group
      label.col-xs-2.control-label 真实姓名
      .col-xs-10
        input.form-control(type="text" name="realname" value="#{user.realname}")
    .form-group
      label.col-xs-2.control-label 公司
      label.col-xs-10.control-label= company.info.name
    .form-group
      label.col-xs-2.control-label 职位
      .col-xs-10
        input.form-control(type="text" name="position" value="#{user.position}")
    .form-group
      label.col-xs-2.control-label 所在地
      .col-xs-10
        input.form-control(type="text")
    .form-group
      label.col-xs-2.control-label 性别
      .col-xs-5.radio
        label
          input(type="radio" name="sex" value="男" checked=(user.sex === '男'))
          | 男
      .col-xs-5.radio
        label
          input(type="radio" name="sex" value="女" checked=(user.sex === '女'))
          | 女
    .form-group
      label.col-xs-2.control-label 生日
      .col-xs-10
        input.form-control(type="text" name="birthday" value="#{user.birthday}")
    .form-group
      label.col-xs-2.control-label 血型
      .col-xs-10
        input.form-control(type="text" name="bloodType" value="#{user.bloodType}")
    .form-group
      label.col-xs-2.control-label 简介
      .col-xs-10
        input.form-control(type="text" name="introduce" value="#{user.introduce}")
    .form-group
      label.col-xs-2.control-label 注册时间
      label.col-xs-10.control-label= user.register_date
    button.btn.btn-primary(type="submit") 保存

block aside
  h1 小组列表
  ul
    each gid in user.gid
      li= gid

block dynamic
  h1 动态列表
  ul
    each group_message in group_messages
      li
        h2= group_message.content
        p= '小组类型：' + group_message.group.group_type
        p= '发起人：' + group_message.poster.username

block schedule
  h1 活动列表
  ul
    each campaign in campaigns
      li
        h2= campaign.campaign.content
        p= '创建时间' + campaign.create_time
        p= '开始时间' + campaign.start_time
        p= '结束时间' + campaign.end_time